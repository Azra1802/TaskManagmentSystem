@model TaskManagementSystem.Models.TaskCreateVM

<div class="modal-header">
    <h5 class="modal-title">Create Task</h5>
    <button class="btn-close" data-bs-dismiss="modal"></button>
</div>

<div class="modal-body">
    <div class="mb-3">
        <input id="create-title" class="form-control" placeholder="Title" />
    </div>

    <div class="mb-3">
        <textarea id="create-description" class="form-control"
                  placeholder="Description"></textarea>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <span>@Html.DisplayNameFor(model => model.Priority) </span>
            <select id="create-priority" class="form-select">
                <option value="0">Low</option>
                <option value="1" selected>Medium</option>
                <option value="2">High</option>
            </select>
        </div>

        <div class="col-md-6 mb-3">
            <span>@Html.DisplayNameFor(model => model.DueDate) </span>
            <input id="create-dueDate" type="date" class="form-control" />
        </div>
    </div>

    <div id="create-error" class="text-danger small mt-2" style="display:none;">
        All fields are required!
    </div>
</div>

<div class="modal-footer">
    <button class="btn btn-primary"
            onclick="createTask({
                title: document.getElementById('create-title').value,
                description: document.getElementById('create-description').value,
                priority: parseInt(document.getElementById('create-priority').value),
                dueDate: document.getElementById('create-dueDate').value || null
            })">
        Create
    </button>
    <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
</div>

